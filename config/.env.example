# RealtyScanner Agent Environment Configuration
# Epic 5.1: Production Environment Variables Template

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens and session management (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-to-a-random-string

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-mongo-password-change-this
MONGO_DATABASE=realtyscanner
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=realty_scanner

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# =============================================================================
# NOTIFICATION API KEYS
# =============================================================================
# Telegram Bot (REQUIRED)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Twilio for WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Email Services
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# =============================================================================
# AGNO FRAMEWORK CONFIGURATION
# =============================================================================
AGNO_API_KEY=your_agno_api_key_here
AGNO_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
FACEBOOK_COOKIES_FILE=./config/facebook_cookies.json
FACEBOOK_SESSION_ENCRYPTION_KEY=your_encryption_key_here

# Application Configuration
LOG_LEVEL=INFO
SCAN_INTERVAL_MINUTES=5
MAX_CONCURRENT_SCANS=3

# Dashboard Configuration
DASHBOARD_SECRET_KEY=your_secret_key_for_dashboard_sessions
DASHBOARD_PORT=8501
